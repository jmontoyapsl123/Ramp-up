pipeline {
    agent any
    environment {
        AZURE_SUBSCRIPTION_ID     = credentials('devopsSubscriptionId')
        AZURE_TENANT_ID = credentials('tenantId')
    }
    stages {
        stage('Terraform Init') {
            steps {
                echo 'Terraform Init'
                 dir('Evidences/6. Infrastructure as Code/terraform/ramp-up') {
                    bat 'terraform init'
                }
            }
        }
        stage('Terraform Plan') {
            steps {
                echo 'Terraform Plan'
                withCredentials([azureServicePrincipal('loginServicePrincipal ')]) {
                    bat 'az login --service-principal -u %AZURE_CLIENT_ID% -p %AZURE_CLIENT_SECRET% -t %AZURE_TENANT_ID%'
                    dir('Evidences/6. Infrastructure as Code/terraform/ramp-up') {
                    bat 'terraform plan'
                  }
                }
                /*withCredentials([usernamePassword(credentialsId: 'azuresp', passwordVariable: 'AZURE_CLIENT_SECRET', usernameVariable: 'AZURE_CLIENT_ID')]) {
                   echo 'Terraform Plan - withCredentials' 
                  bat "az login --service-principal -u %AZURE_CLIENT_ID% -p %AZURE_CLIENT_SECRET% -t %AZURE_TENANT_ID%"
                  bat 'az account set -s %AZURE_SUBSCRIPTION_ID%'
                  dir('Evidences/6. Infrastructure as Code/terraform/ramp-up') {
                    bat 'terraform plan'
                  }
                  
                }*/

            }
        }
    }
}